# EditorConfig is awesome: https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{java,kt,kts}]
max_line_length = 120

[*.{js,ts,jsx,tsx}]
indent_size = 2
max_line_length = 120

[*.{css,scss,sass}]
indent_size = 2
max_line_length = 120

[*.json]
indent_size = 2
max_line_length = 120

[*.{xml,gradle,properties}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2
max_line_length = 120

[*.{Dockerfile,Dockerfile-compose}]
indent_size = 2

[*.md]
indent_size = 2
max_line_length = 80